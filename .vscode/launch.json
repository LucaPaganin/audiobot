    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: debug_audio.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug_audio.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "windows": {
                "args": [
                    "${env:USERPROFILE}/Downloads/audio2.ogg",
            ]
            },
            "linux": {
                "args": [
                    "${env:HOME}/Downloads/audio1.ogg",
                ]
            }
        },
        {
            "name": "Python: bot.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bot.py",
            "console": "integratedTerminal",
            "args": []
        }
    ]
}